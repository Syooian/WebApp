@model MyModel_CodeFirst.Models.ReBook

@{
    Layout = null;
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="ReBookID" class="form-control" value="@Guid.NewGuid()" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="8"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="BookID" class="control-label"></label>
                <select asp-for="BookID" class ="form-control" asp-items="ViewBag.BookID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="確定回覆" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

